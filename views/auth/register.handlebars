<div class='auth-container'>
	<h2>Registrar</h2>
	<form action='/register' method='POST'>
		<div class='form-control'>
			<label for='name'>Nome:</label>
			<input type='text' name='name' placeholder='Digite seu nome' required />
		</div>
		<div class='form-control'>
			<label for='email'>Email:</label>
			<input type='email' name='email' placeholder='Digite seu email' required />
		</div>
		<div class='form-control'>
			<label for='pass'>Senha:</label>
			<input type='password' name='pass' placeholder='Digite sua senha' required />
		</div>
		<div class='form-control'>
			<label for='pass2'>Confirmação da Senha:</label>
			<input type='password' name='pass2' placeholder='Confirme a senha' required />
		</div>
		<input type='submit' value='Cadastrar' />
		<p>Possui conta? <a href='/login'>Clique aqui</a></p>

	</form>
</div>